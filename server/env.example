PORT=8080
FYERS_APP_ID=your_fyers_app_id
FYERS_SECRET_KEY=your_fyers_secret

# Must be the backend URL + /auth/callback and also whitelisted in Fyers app settings
FYERS_REDIRECT_URL=https://your-railway-app.up.railway.app/auth/callback

# Your frontend URL for CORS and redirects after login
FRONTEND_URL=https://your-frontend.vercel.app

# Optional: set to 1 to enable fyers logging, otherwise leave unset
FYERS_ENABLE_LOGGING=0
LOG_PATH=/tmp
